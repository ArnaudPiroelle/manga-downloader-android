<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/item_view_background"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="@dimen/padding">

    <TextView
        android:id="@+id/history_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:maxLines="2"
        android:textColor="@color/text_body"
        app:layout_constraintEnd_toStartOf="@+id/history_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Chap. 950: A super long title (Downloaded)" />

    <TextView
        android:id="@+id/history_sublabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="4dp"
        android:maxLines="2"
        android:layout_marginBottom="8dp"
        android:textColor="@color/text_body_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/history_date"
        app:layout_constraintStart_toStartOf="@+id/history_label"
        app:layout_constraintTop_toBottomOf="@+id/history_label"
        app:layout_constraintVertical_bias="0.0"
        tools:text="One Piece" />

    <TextView
        android:id="@+id/history_date"
        android:layout_width="100dp"
        android:maxLines="1"
        android:layout_height="wrap_content"
        android:textColor="@color/text_body_2"
        app:layout_constraintBottom_toBottomOf="@+id/history_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="3 hours ago" />

</androidx.constraintlayout.widget.ConstraintLayout>